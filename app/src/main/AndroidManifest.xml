<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kralofsky.cipherbox">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainMenuActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".lab1.Lab1Activity" />
        <activity android:name=".lab1.ListActivity" />
        <activity android:name=".lab1.AddActivity" />
        <activity android:name=".lab1.DisplayActivity" />
        <activity android:name=".CipherActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".Lab2Activity" />
        <activity android:name=".CipherTheoryActivity" />
    </application>
</manifest>
